@namespace Microsoft.AspNetCore.Components

@if (CurrentAuthenticationState.User?.Identity?.IsAuthenticated == true)
{
    @ChildContent
}

@functions {
    [CascadingParameter] public IAuthenticationState CurrentAuthenticationState { get; private set; }

    /// <summary>
    /// The content that will be displayed if the user is authorized.
    /// </summary>
    [Parameter] public RenderFragment ChildContent { get; private set; }
}
